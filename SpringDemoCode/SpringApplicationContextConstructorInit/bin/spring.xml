<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd" [
<!ENTITY contextInclude SYSTEM "org/springframework/web/portlet/context/WEB-INF/contextInclude.xml">
]>

<beans>
<!-- 	Based on constructor type -->
	<bean id = "triangle" class="com.prakash.spring.Triangle" >
		<constructor-arg type="java.lang.String" value="Eqilateral"></constructor-arg>
		<constructor-arg type="int"   value="20"></constructor-arg>
	</bean>
	
	
<!-- 	Based on constructor indexing -->
	<bean id = "circle" class="com.prakash.spring.Circle" >
		<constructor-arg index="0" value="Circle"></constructor-arg>
		<constructor-arg index="1"   value="30"></constructor-arg>
	</bean>
	
	
</beans>